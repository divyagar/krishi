<div class="add-item">
    <h2>
        Add item
    </h2>

    <%= form_with url: items_path do |form| %>
        <div class="form-field">
            <%= form.label :name, "Name" %>
            <%= form.text_field :name %>
        </div>

        <div class="form-field">
            <%= form.label :itemtype, "Item type" %>
            <%= form.select :itemtype, ["Vegetable", "Fruit", "Seed"] %>
        </div>

        <div class="form-field">
            <%= form.label :quantity, "Quantity" %>
            <%= form.number_field :quantity %>
        </div>

        <div class="form-field">
            <%= form.label :price_per_kilo, "Price per kilo" %>
            <%= form.number_field :price_per_kilo %>
        </div>

        <div class="form-field">
            <%= form.submit "Add item" %>
        </div>
    <% end %>
</div>